<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>AI Agent Control Tower - Live</title>
<style>
* { margin: 0; padding: 0; box-sizing: border-box; }

:root {
  /* Light mode (default) */
  --bg: #f5f6f8;
  --surface: #ffffff;
  --surface2: #f1f3f5;
  --text: #1a1d21;
  --text-dim: #5a6270;
  --border: #d8dce2;
  --primary: #4f46e5;
  --primary-hover: #4338ca;
  --success: #10b981;
  --warning: #f59e0b;
  --danger: #ef4444;
  --shadow: 0 2px 8px rgba(0,0,0,0.08);
}

[data-theme="dark"] {
  /* Dark mode */
  --bg: #0a0e1a;
  --surface: #141b2d;
  --surface2: #1e2940;
  --text: #e0e6ed;
  --text-dim: #8b949e;
  --border: #1e2940;
  --primary: #58a6ff;
  --primary-hover: #79c0ff;
  --success: #3fb950;
  --warning: #d29922;
  --danger: #f85149;
  --shadow: 0 4px 12px rgba(0,0,0,0.3);
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: var(--bg);
  color: var(--text);
  padding: 20px;
  transition: background 0.3s, color 0.3s;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: var(--surface);
  border-radius: 12px;
  margin-bottom: 20px;
  border: 1px solid var(--border);
  box-shadow: var(--shadow);
}

.header h1 {
  font-size: 24px;
  font-weight: 600;
  color: var(--primary);
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 16px;
  background: var(--surface2);
  border-radius: 8px;
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--success);
  animation: pulse 2s infinite;
}

.status-dot.error { background: var(--danger); }

.theme-toggle {
  background: var(--surface2);
  border: 1px solid var(--border);
  color: var(--text);
  padding: 8px 16px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 18px;
  transition: all 0.2s;
  margin-left: 12px;
}

.theme-toggle:hover {
  background: var(--border);
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 20px;
}

.card {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 20px;
  box-shadow: var(--shadow);
}

.card h2 {
  font-size: 18px;
  color: var(--primary);
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.session-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  max-height: 600px;
  overflow-y: auto;
}

.session-item {
  background: #0d1117;
  border: 1px solid #1e2940;
  border-radius: 8px;
  padding: 14px;
  cursor: pointer;
  transition: all 0.2s;
}

.session-item:hover {
  border-color: #58a6ff;
  background: #161b22;
}

.session-item.selected {
  border-color: #58a6ff;
  background: #161b22;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.session-name {
  font-weight: 600;
  color: #e0e6ed;
  font-size: 14px;
}

.session-status {
  padding: 3px 10px;
  border-radius: 4px;
  font-size: 11px;
  font-weight: 600;
}

.session-status.active { background: #238636; color: #fff; }
.session-status.isolated { background: #6e7681; color: #fff; }

.session-meta {
  font-size: 12px;
  color: #8b949e;
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  max-height: 500px;
  overflow-y: auto;
}

.message {
  background: #0d1117;
  border: 1px solid #1e2940;
  border-radius: 8px;
  padding: 12px;
}

.message.user {
  border-left: 3px solid #58a6ff;
}

.message.assistant {
  border-left: 3px solid #3fb950;
}

.message-role {
  font-size: 11px;
  font-weight: 600;
  color: #8b949e;
  text-transform: uppercase;
  margin-bottom: 6px;
}

.message-content {
  font-size: 13px;
  color: #e0e6ed;
  line-height: 1.5;
}

.metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 12px;
}

.metric {
  background: #0d1117;
  border: 1px solid #1e2940;
  border-radius: 8px;
  padding: 14px;
  text-align: center;
}

.metric-value {
  font-size: 28px;
  font-weight: 700;
  color: #58a6ff;
  display: block;
  margin-bottom: 4px;
}

.metric-label {
  font-size: 12px;
  color: #8b949e;
}

.loading {
  text-align: center;
  padding: 40px;
  color: #8b949e;
}

.error {
  background: #2d1f1f;
  border: 1px solid #f85149;
  border-radius: 8px;
  padding: 16px;
  color: #f85149;
  margin-bottom: 20px;
}

.btn {
  background: #238636;
  color: #fff;
  border: none;
  padding: 10px 18px;
  border-radius: 6px;
  cursor: pointer;
  font-weight: 600;
  font-size: 14px;
  transition: all 0.2s;
  width: 100%;
  margin-top: 12px;
}

.btn:hover {
  background: #2ea043;
}

.empty-state {
  text-align: center;
  padding: 40px;
  color: #6e7681;
  font-size: 14px;
}
</style>
</head>
<body>

<div class="header">
  <h1>ðŸŽ¯ AI Agent Control Tower</h1>
  <div class="status-indicator">
    <span class="status-dot" id="statusDot"></span>
    <span id="statusText">Connecting...</span>
  </div>
</div>

<div id="errorContainer"></div>

<div class="grid">
  <!-- Sessions List -->
  <div class="card">
    <h2>âš¡ Active Sessions (<span id="sessionCount">0</span>)</h2>
    <div class="session-list" id="sessionList">
      <div class="loading">Loading sessions...</div>
    </div>
    <button class="btn" onclick="refreshSessions()">Refresh</button>
  </div>

  <!-- Session Details -->
  <div class="card">
    <h2>ðŸ“Š Session Details</h2>
    <div id="sessionDetails">
      <div class="empty-state">Select a session to view details</div>
    </div>
  </div>

  <!-- Recent Messages -->
  <div class="card" style="grid-column: span 2;">
    <h2>ðŸ’¬ Recent Messages</h2>
    <div class="message-list" id="messageList">
      <div class="empty-state">Select a session to view messages</div>
    </div>
  </div>
</div>

<script>
const API_BASE = window.location.protocol + '//' + window.location.host;
let selectedSession = null;
let refreshInterval = null;

async function fetchSessions() {
  try {
    const response = await fetch(`${API_BASE}/api/sessions`);
    if (!response.ok) throw new Error('API unavailable');
    
    const data = await response.json();
    updateStatus('connected');
    renderSessions(data.sessions);
    return data.sessions;
  } catch (error) {
    updateStatus('error', error.message);
    showError('Failed to fetch sessions. Is the backend running?');
    return [];
  }
}

async function fetchSessionHistory(sessionKey) {
  try {
    const response = await fetch(`${API_BASE}/api/sessions/${encodeURIComponent(sessionKey)}/history?limit=20`);
    if (!response.ok) throw new Error('Failed to fetch history');
    
    const data = await response.json();
    renderMessages(data.messages);
  } catch (error) {
    console.error('Failed to fetch history:', error);
    showError('Failed to load message history');
  }
}

function updateStatus(status, message = '') {
  const dot = document.getElementById('statusDot');
  const text = document.getElementById('statusText');
  
  if (status === 'connected') {
    dot.classList.remove('error');
    text.textContent = 'Connected';
  } else if (status === 'error') {
    dot.classList.add('error');
    text.textContent = message || 'Error';
  }
}

function showError(message) {
  const container = document.getElementById('errorContainer');
  container.innerHTML = `<div class="error">${message}</div>`;
  setTimeout(() => container.innerHTML = '', 5000);
}

function renderSessions(sessions) {
  const list = document.getElementById('sessionList');
  const count = document.getElementById('sessionCount');
  
  count.textContent = sessions.length;
  
  if (!sessions.length) {
    list.innerHTML = '<div class="empty-state">No active sessions</div>';
    return;
  }
  
  list.innerHTML = sessions.map(session => `
    <div class="session-item ${selectedSession?.key === session.key ? 'selected' : ''}" 
         onclick='selectSession(${JSON.stringify(session)})'>
      <div class="session-header">
        <span class="session-name">${session.displayName || session.key}</span>
        <span class="session-status ${session.kind || 'active'}">${session.kind || 'active'}</span>
      </div>
      <div class="session-meta">
        <span>Model: ${session.model || 'unknown'}</span>
        <span>Tokens: ${formatNumber(session.totalTokens || 0)}</span>
      </div>
    </div>
  `).join('');
}

function selectSession(session) {
  selectedSession = session;
  renderSessionDetails(session);
  fetchSessionHistory(session.key);
  renderSessions(JSON.parse(localStorage.getItem('sessions') || '[]'));
}

function renderSessionDetails(session) {
  const container = document.getElementById('sessionDetails');
  
  const contextPct = session.contextTokens && session.totalTokens 
    ? Math.round((session.contextTokens / 1000000) * 100)
    : 0;
  
  container.innerHTML = `
    <div class="metrics">
      <div class="metric">
        <span class="metric-value">${formatNumber(session.totalTokens || 0)}</span>
        <span class="metric-label">Total Tokens</span>
      </div>
      <div class="metric">
        <span class="metric-value">${contextPct}%</span>
        <span class="metric-label">Context Used</span>
      </div>
      <div class="metric">
        <span class="metric-value">${session.model?.split('/').pop() || 'N/A'}</span>
        <span class="metric-label">Model</span>
      </div>
    </div>
  `;
}

function renderMessages(messages) {
  const list = document.getElementById('messageList');
  
  if (!messages || !messages.length) {
    list.innerHTML = '<div class="empty-state">No messages yet</div>';
    return;
  }
  
  list.innerHTML = messages.slice(-20).reverse().map(msg => {
    const content = typeof msg.content === 'string' 
      ? msg.content 
      : JSON.stringify(msg.content).substring(0, 200) + '...';
    
    return `
      <div class="message ${msg.role}">
        <div class="message-role">${msg.role}</div>
        <div class="message-content">${escapeHtml(content)}</div>
      </div>
    `;
  }).join('');
}

function formatNumber(num) {
  if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
  if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
  return num.toString();
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

async function refreshSessions() {
  const sessions = await fetchSessions();
  localStorage.setItem('sessions', JSON.stringify(sessions));
  if (selectedSession) {
    await fetchSessionHistory(selectedSession.key);
  }
}

// Auto-refresh every 10 seconds
refreshInterval = setInterval(refreshSessions, 10000);

// Initial load
refreshSessions();
</script>

</body>
</html>
